                background-image: -webkit-linear-gradient(left, rgba(130,0,0,.3), rgba(130,0,0,0)) !important
              .idleTime                
              .icons
                display: inline-block
                height: 28px
                position: absolute
                right: 28px
                text-align: right
                width: 100px
                
                div
                  float: right
                  margin: 0px 3px
                .fan
                  background: url(http://i.imgur.com/qlymb.png)
                  height: 14px
                  margin-top: 6px
                  width: 15px
