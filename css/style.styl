              width: 32px
            #listeners
              background: url(https://s3.amazonaws.com/static.turntable.fm/images/index/buddy_list_friend_icon.png) 7px 5px no-repeat #404040
            #upvotes
              background: url(http://i.imgur.com/WuaW6.png) 8px 3px no-repeat #404040
              cursor: pointer
              &.active
                background-color: rgba(0,255,0,.2)
                box-shadow: 0px 0px 10px rgba(0,255,0,.7)
              &.auto
                box-shadow: 0px 0px 10px rgba(0,255,0,0.70), inset 0px 0px 3px rgba(0,255,0,1)
            #downvotes
              background: url(http://i.imgur.com/SQren.png) 8px 3px no-repeat #404040
              cursor: pointer
              &.active
                background-color: rgba(255,0,0,.2)
                box-shadow: 0px 0px 10px rgba(255,0,0,.7)
            #queues
              background: url(https://s3.amazonaws.com/static.turntable.fm/images/room/heart.png) 9px no-repeat #404040
              background-size: 14px
              &.active
                background-color: rgba(255,0,0,.2)
                box-shadow: 0px 0px 10px rgba(255,0,0,.7)
          .room
            background: -webkit-linear-gradient(rgba(255,255,255,.1),rgba(255,255,255,0))
            cursor: help
            height: 32px
            line-height: 32px            
            .favorite
              background: url(https://s3.amazonaws.com/static.turntable.fm/images/index/favorite_sprite.png) 0px -23px no-repeat
              cursor: pointer
              height: 23px
              left: 5px
              opacity: .3
              position: absolute
              width: 23px
              top: 4px
            .favorite-on
              opacity: 1
            .name
              color: #fff
              font-weight: 100
              margin-left: 30px
              overflow: hidden
              text-overflow: ellipsis
              text-shadow: 0px 1px #000;
              width: 270px
              white-space: nowrap
          .feedback
          .faqButton
          .url
          .share-on
            display: none
        .chat-container
          bottom: 0
          top: auto !important
          width: 600px
          z-index:3
          
          .chatHeader
            border-radius: 4px 4px 0px 0px
            bottom: 289px
            cursor: default
            position: absolute
            
