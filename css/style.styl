                  background: url(http://static.turntable.fm.s3.amazonaws.com/images/room/mod_icon.png)
                  height: 14px
                  margin-top: 7px
                  width: 12px
                .superuser
                  background: url(http://static.turntable.fm.s3.amazonaws.com/images/room/superuser_icon.png)
